{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeiviTech VoiceHub",
  "version": "0.0.1-pre-alpha",
  "identifier": "com.deivisan.voicehub",
  "build": {
    "frontendDist": "../src/public",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5001"
  },
  "app": {
    "windows": [
      {
        "title": "DeiviTech VoiceHub",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "DeiviTech VoiceHub - Click to show/hide"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["ydotool"]
      }
    }
  }
}
